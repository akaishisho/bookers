<h1>Editing Book</h1>
<%= form_with model:@book, url:"/books/#{book.id}", local:true do |f| %>
  <div class = "field">
    <label for = "book_title">Title</label>
  </div>
  <%= f.text_field :title %>
  <div class = "field">
    <label for = "book_body">Body</label>
  </div>
  <%= f.text_area :body %>
  <div class = "actions">
    <%= f.submit 'Update Book' %>
  </div>
  <p>
  <%= link_to "Show",book_path(book.id) %>|<%= link_to "Back", :back %>
  </p>
<% end %>